<h1>Listing reports</h1>

<table>
  <tr>
    <th>Department</th>
    <th>Disposition</th>
    <th>Outcome</th>
    <th>Deposition</th>
    <th>Gender</th>
    <th>Nationality</th>
    <th>Age</th>
    <th>Location</th>
    <th>Client ip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.department %></td>
    <td><%= report.disposition %></td>
    <td><%= report.outcome %></td>
    <td><%= report.deposition %></td>
    <td><%= report.gender %></td>
    <td><%= report.nationality %></td>
    <td><%= report.age %></td>
    <td><%= report.location %></td>
    <td><%= report.client_ip %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

