<h1>Recent reports</h1>

<table>
  <tr>
    <th>Nationality</th>
    <th>Religion</th>
    <th>Age</th>
	<th>Gender</th>
    <th>Department</th>
    <th>Location</th>
    <th>Disposition</th>
    <th>Outcome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= link_to (report.nationality), report_path(report)  %></td>
	<td><%= report.religion %></td>
    <td><%= report.age %></td>	
	<td><%= report.gender %></td>
    <td><%= report.agency %></td>
    <td><%= report.location %></td>
    <td><%= report.disposition.truncate(50) %></td>
    <td><%= report.outcome.truncate(50) %></td>
  </tr>
<% end %>
</table>

